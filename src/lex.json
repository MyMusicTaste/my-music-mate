{
  "intents": [
    {
      "name": "InivteFriends",
      "description": "An itent for invite friends to a Slack channel.",
      "slots": [
        {
          "name": "Invitees",
          "description": "A slot for holding the list of Slack users to be invited to a channel.",
          "slotConstraint": "Required",
          "slotType": "AMAZON.Person",
          "valueElicitationPrompt": {
            "messages": [
              {
                "contentType": "PlainText",
                "content": "Whom do you want to invite to the channel?"
              }
            ],
            "maxAttempts": 5
          },
          "priority": 2,
          "sampleUtterances": [
            "I would like to invite {Invitees}"
          ]
        },

        {
          "name": "Channel",
          "description": "A slot for holding the name of the channel that a host wants to create.",
          "slotConstraint": "Required",
          "slotType": "AMAZON.MusicEvent",
          "valueElicitationPrompt": {
            "messages": [
              {
                "contentType": "PlainText",
                "content": "What name do you want to create your channel with?"
              }
            ],
            "maxAttempts": 5
          },
          "priority": 2,
          "sampleUtterances": [
            "{Channel} please."
          ]
        }
      ],
      "sampleUtterances": [
        "I would like to go to a concert with my friends.",
        "I would like to go to a concert with {Invitees}"
      ],
      "confirmationPrompt": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Are you sure you want to invite {Invitees} to {Channel} channel?"
          }
        ],
        "maxAttempts": 1
      },
      "rejectionStatement": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "I will cancel your arrangement for now. Let me know again if you want to start over."
          }
        ]
      },
      "dialogCodeHook": {
        "uri": "arn:aws:lambda:${self:provider.region}:${AWS::AccountId}:function:${self:custom.namespace}-temp",
        "messageVersion": "1.0"
      },
      "fulfillmentActivity": {
        "type": "CodeHook",
        "codeHook": {
          "uri": "arn:aws:lambda:${self:provider.region}:${AWS::AccountId}:function:${self:custom.namespace}-temp",
          "messageVersion": "1.0"
        }
      }
    }
  ]
}