{
  "bot": {
    "name": "",
    "description": "",
    "intents": [],
    "clarificationPrompt": {
      "maxAttempts": 5,
      "messages": [
        {
          "content": "Sorry, could you specify a little bit?",
          "contentType": "PlainText"
        }
      ]
    },
    "abortStatement": {
      "messages": [
        {
          "content": "THIS ABORT STATEMENT SHOULD NOT BE PRINTED IN ANY SITUATION",
          "contentType": "PlainText"
        }
      ]
    },
    "idleSessionTTLInSeconds": 300,
    "processBehavior": "BUILD",
    "locale": "en-US",
    "childDirected": false
  },
  "alias": {
    "name": "",
    "botName": "",
    "botVersion": "$LATEST"
  },


  "intents": [
    {
      "name": "InviteMate",
      "slots": [
        {
          "name": "Mate",
          "slotConstraint": "Required",
          "slotType": "AMAZON.Person",
          "valueElicitationPrompt": {
            "messages": [
              {
                "contentType": "PlainText",
                "content": "Whom do you want to invite?"
              }
            ],
            "maxAttempts": 5
          },
          "priority": 1,
          "sampleUtterances": [
            "I would like to invite {Mate}"
          ]
        }

      ],
      "sampleUtterances": [
        "I would like to go to a concert with {Mate}",
        "I want to have a great time with {Mate}"
      ],
      "confirmationPrompt": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Are there any other people you want to bring with you?"
          }
        ],
        "maxAttempts": 5
      },
      "rejectionStatement": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "THIS REJECT STATEMENT SHOULD NOT BE PRINTED IN ANY SITUATION"
          }
        ]
      },
      "dialogCodeHook": {
        "uri": "arn:aws:lambda:${self:provider.region}:${AWS::AccountId}:function:${self:custom.namespace}-lex-invite-mate",
        "messageVersion": "1.0"
      },
      "fulfillmentActivity": {
        "type": "ReturnIntent"
      }
    },


    {
      "name": "ReserveLounge",
      "slots": [
        {
          "name": "Lounge",
          "slotConstraint": "Required",
          "slotType": "AMAZON.Person",
          "valueElicitationPrompt": {
            "messages": [
              {
                "contentType": "PlainText",
                "content": "Now, tell me any name that you want to create a channel with?"
              }
            ],
            "maxAttempts": 5
          },
          "priority": 1,
          "sampleUtterances": [
            "I would like to create a channel name with {Lounge}",
            "What about {Lounge}",
            "{Lounge} please"
          ]
        }

      ],
      "sampleUtterances": [
        "THIS RESERVE LOUNGE INTENT SHOULD NOT BE INVOKED BY ANY UTTERANCES"
      ],
      "confirmationPrompt": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Are you sure you want to create a channel name with {Lounge}?"
          }
        ],
        "maxAttempts": 5
      },
      "rejectionStatement": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "THIS REJECT STATEMENT SHOULD NOT BE PRINTED IN ANY SITUATION"
          }
        ]
      },
      "dialogCodeHook": {
        "uri": "arn:aws:lambda:${self:provider.region}:${AWS::AccountId}:function:${self:custom.namespace}-lex-reserve-lounge",
        "messageVersion": "1.0"
      },
      "fulfillmentActivity": {
        "type": "ReturnIntent"
      }
    },

    {
      "name": "AskGenre",
      "slots": [
        {
          "name": "Genre",
          "slotConstraint": "Required",
          "slotType": "AMAZON.Genre",
          "valueElicitationPrompt": {
            "messages": [
              {
                "contentType": "PlainText",
                "content": "Tell me your favorite music genre."
              }
            ],
            "maxAttempts": 5
          },
          "priority": 1,
          "sampleUtterances": [
            "I like the genre {Genre}​",
            "Genre {Genre}​",
            "My favorite genre is {Genre}​"
          ]
        }

      ],
      "sampleUtterances": [
        "THIS ASK GENRE INTENT SHOULD NOT BE INVOKED BY ANY UTTERANCES"
      ],
      "confirmationPrompt": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Are there any music genre that you want to mention?"
          }
        ],
        "maxAttempts": 5
      },
      "rejectionStatement": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "THIS REJECT STATEMENT SHOULD NOT BE PRINTED IN ANY SITUATION"
          }
        ]
      },
      "dialogCodeHook": {
        "uri": "arn:aws:lambda:${self:provider.region}:${AWS::AccountId}:function:${self:custom.namespace}-lex-ask-genre",
        "messageVersion": "1.0"
      },
      "fulfillmentActivity": {
        "type": "ReturnIntent"
      }
    },


    {
      "name": "AskArtist",
      "slots": [
        {
          "name": "Artist",
          "slotConstraint": "Required",
          "slotType": "AMAZON.Artist",
          "valueElicitationPrompt": {
            "messages": [
              {
                "contentType": "PlainText",
                "content": "Tell me your favorite artist."
              }
            ],
            "maxAttempts": 5
          },
          "priority": 1,
          "sampleUtterances": [
            "I like the band {Artist}​",
            "Band {Artist}​​",
            "I like the musician {Artist}​",
            "Musician {Artist}"
          ]
        }

      ],
      "sampleUtterances": [
        "THIS ASK ARTIST INTENT SHOULD NOT BE INVOKED BY ANY UTTERANCES"
      ],
      "confirmationPrompt": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Are there any artist that you want to mention?"
          }
        ],
        "maxAttempts": 5
      },
      "rejectionStatement": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "THIS REJECT STATEMENT SHOULD NOT BE PRINTED IN ANY SITUATION"
          }
        ]
      },
      "dialogCodeHook": {
        "uri": "arn:aws:lambda:${self:provider.region}:${AWS::AccountId}:function:${self:custom.namespace}-lex-ask-artist",
        "messageVersion": "1.0"
      },
      "fulfillmentActivity": {
        "type": "ReturnIntent"
      }
    },


    {
      "name": "AskCity",
      "slots": [
        {
          "name": "City",
          "slotConstraint": "Required",
          "slotType": "AMAZON.US_CITY",
          "valueElicitationPrompt": {
            "messages": [
              {
                "contentType": "PlainText",
                "content": "Could you tell me where you guys live in?"
              }
            ],
            "maxAttempts": 5
          },
          "priority": 1,
          "sampleUtterances": [
            "I live in {City}",
            "I am staying in {City}"
          ]
        }

      ],
      "sampleUtterances": [
        "THIS ASK CITY INTENT SHOULD NOT BE INVOKED BY ANY UTTERANCES"
      ],
      "confirmationPrompt": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "THIS CONFIRMATION STATEMENT SHOULD NOT BE PRINTED IN ANY SITUATION"
          }
        ],
        "maxAttempts": 5
      },
      "rejectionStatement": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "THIS REJECT STATEMENT SHOULD NOT BE PRINTED IN ANY SITUATION"
          }
        ]
      },
      "dialogCodeHook": {
        "uri": "arn:aws:lambda:${self:provider.region}:${AWS::AccountId}:function:${self:custom.namespace}-lex-ask-city",
        "messageVersion": "1.0"
      },
      "fulfillmentActivity": {
        "type": "ReturnIntent"
      }
    }



  ]
}
