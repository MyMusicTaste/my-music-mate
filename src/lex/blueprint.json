{
  "bot": {
    "name": "",
    "description": "",
    "intents": [],
    "clarificationPrompt": {
      "maxAttempts": 5,
      "messages": [
        {
          "content": "Sorry, I don't understand what you said.",
          "contentType": "PlainText"
        }
      ]
    },
    "abortStatement": {
      "messages": [
        {
          "content": "I'm sorry, but you are talking gibberish.",
          "contentType": "PlainText"
        }
      ]
    },
    "idleSessionTTLInSeconds": 300,
    "processBehavior": "BUILD",
    "locale": "en-US",
    "childDirected": false
  },
  "alias": {
    "name": "",
    "botName": "",
    "botVersion": "$LATEST"
  },


  "intents": [
    {
      "name": "InviteMate",
      "description": "Intent for adding Slack users on DB to invite to a Slack channel.",
      "slots": [
        {
          "name": "Mate",
          "description": "Slot for holding the first Slack users to be invited to a channel.",
          "slotConstraint": "Required",
          "slotType": "AMAZON.Person",
          "valueElicitationPrompt": {
            "messages": [
              {
                "contentType": "PlainText",
                "content": "Whom do you want to invite?"
              }
            ],
            "maxAttempts": 5
          },
          "priority": 1,
          "sampleUtterances": [
            "I would like to invite {Mate}"
          ]
        }

      ],
      "sampleUtterances": [
        "I would like to go to a concert with {Mate}",
        "I want to have a great time with {Mate}"
      ],
      "confirmationPrompt": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Whom else do you want to go with?"
          },
          {
            "contentType": "PlainText",
            "content": "Are there any other people you want to bring with you?"
          }
        ],
        "maxAttempts": 5
      },
      "rejectionStatement": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Let me know again if you want to start over."
          }
        ]
      },
      "dialogCodeHook": {
        "uri": "arn:aws:lambda:${self:provider.region}:${AWS::AccountId}:function:${self:custom.namespace}-lex-invite-mate",
        "messageVersion": "1.0"
      },
      "fulfillmentActivity": {
        "type": "ReturnIntent"
      }
    },


    {
      "name": "ReserveLounge",
      "description": "Intent for deciding a Slack channel name the bot will create and invite slack users into.",
      "slots": [
        {
          "name": "Lounge",
          "description": "Slot for holding the desired name of Slack channel.",
          "slotConstraint": "Required",
          "slotType": "AMAZON.Person",
          "valueElicitationPrompt": {
            "messages": [
              {
                "contentType": "PlainText",
                "content": "Now, tell me any name that you want to create a channel with?"
              }
            ],
            "maxAttempts": 5
          },
          "priority": 1,
          "sampleUtterances": [
            "I would like to create a channel name with {Lounge}",
            "What about {Lounge}",
            "{Lounge} please"
          ]
        }

      ],
      "sampleUtterances": [
        "THIS RESERVE LOUNGE INTENT SOULDN'T INVOKED BY ANY UTTERANCES"
      ],
      "confirmationPrompt": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Are you sure you want to create a channel name with {Lounge}?"
          }
        ],
        "maxAttempts": 5
      },
      "rejectionStatement": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Let me know again if you want to start over."
          }
        ]
      },
      "dialogCodeHook": {
        "uri": "arn:aws:lambda:${self:provider.region}:${AWS::AccountId}:function:${self:custom.namespace}-lex-reserve-lounge",
        "messageVersion": "1.0"
      },
      "fulfillmentActivity": {
        "type": "ReturnIntent"
      }
    },


    {
      "name": "AskCity",
      "description": "Intent for asking mates' desired city for concert recommendation.",
      "slots": [
        {
          "name": "City",
          "description": "Slot for holding the city name.",
          "slotConstraint": "Required",
          "slotType": "AMAZON.US_CITY",
          "valueElicitationPrompt": {
            "messages": [
              {
                "contentType": "PlainText",
                "content": "Could you tell the city that you want to go for a concert?"
              }
            ],
            "maxAttempts": 5
          },
          "priority": 1,
          "sampleUtterances": [
            "I live in {City}"
          ]
        }

      ],
      "sampleUtterances": [
        "THIS ASK CITY INTENT SHOULD NOT BE INVOKED BY ANY UTTERANCES"
      ],
      "confirmationPrompt": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Are you sure your desired city for going for a concert?"
          }
        ],
        "maxAttempts": 5
      },
      "rejectionStatement": {
        "messages": [
          {
            "contentType": "PlainText",
            "content": "Let me know again if you want to start over."
          }
        ]
      },
      "dialogCodeHook": {
        "uri": "arn:aws:lambda:${self:provider.region}:${AWS::AccountId}:function:${self:custom.namespace}-lex-ask-city",
        "messageVersion": "1.0"
      },
      "fulfillmentActivity": {
        "type": "ReturnIntent"
      }
    }



  ]
}
